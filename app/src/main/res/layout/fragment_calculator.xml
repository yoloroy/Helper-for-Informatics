<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/calc_enter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:gravity="bottom|start"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="64sp"
                app:layout_constraintBottom_toTopOf="@id/calc_answer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/calc_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text=" = 0"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.support.v7.widget.GridLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ddd"
                android:paddingStart="-1dp"
                app:columnCount="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/calc_button"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <Spinner
                        android:id="@+id/calc_num_system_spinner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:background="#0000"
                        android:dropDownWidth="wrap_content"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        app:layout_columnWeight="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_rowWeight="1"
                        tools:listitem="@layout/my_simple_dropdown_spinner_item" />

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_arrow_drop_down_black_24dp"
                        android:backgroundTint="#555"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>

                <Button
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/calc_button"
                    android:focusableInTouchMode="false"
                    android:onClick="calc_onClickButton"
                    android:text=" ^ "
                    android:textAllCaps="false"
                    android:textColor="#555"
                    android:textSize="24sp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/calc_button"
                    android:focusableInTouchMode="false"
                    android:onClick="calc_onClickButton"
                    android:text="!"
                    android:textAllCaps="false"
                    android:textColor="#555"
                    android:textSize="24sp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

