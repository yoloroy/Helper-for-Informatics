                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorCalcNums"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="calcInsert"
                    android:text="9"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/calc_Mplus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorCalcData"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="calcAction"
                    android:text="M+"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/calc_MR"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorCalcData"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="calcAction"
                    android:text="MR"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/calcLine3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/calcLine2"
            app:layout_constraintEnd_toEndOf="parent"
