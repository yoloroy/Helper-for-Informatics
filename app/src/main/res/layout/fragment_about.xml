<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rect_corners_s"
        android:backgroundTint="#fff"
        android:elevation="2dp"
        android:padding="4dp"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Создатели:"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="Василиса Мурунова  (https://vk.com/murrrunovskaya )"
                android:textColor="@color/color1st_test"
                android:textColorLink="#22f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="Ларюшкин Сергей  (https://vk.com/slartak )"
                android:textColor="@color/color1st_test"
                android:textColorLink="#22f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="Зачем это приожение?"
                android:textColor="@color/color1st_test"
                android:textColorLink="#22f"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:autoLink="all"
                android:freezesText="true"
                android:linksClickable="true"
                android:text="Многие выпускники испытывают проблемы при подготовке к ЕГЭ по информатике большое количество формул, определений, типов задач не даёт покоя ни школьникам, ни учителям, ни их родителям, даже друзьям, что теряют своего товарища за справочниками, учебниками, задачниками, за подготовительными курсами, репетиторами. Есть различные приложения по обучению различным навыкам, как люди осваивают программирование в Sololearn, так и мы хотим, чтоб школьники готовились к ЕГЭ в нашем приложении."
                android:textColor="#333"
                android:textColorLink="#22f"
                android:textIsSelectable="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="*отсылки к фоксфорду, решуегэ, полякову, mxparser'у*"
                android:textColor="#aaa"
                android:textColorLink="#22f"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>