<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resh2Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rect_corners_s"
                android:backgroundTint="#fff"
                android:elevation="2dp"
                android:gravity="right|top"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="16dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:src="@drawable/ic_info_outlined"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="‣" />

                    <TextView
                        android:id="@+id/resh2_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text='Когда пишете логическое выражение, используйте:\n• "*", "&amp;", "и" вместо "/\\"\n• "+", "|", "или" вместо "\\/" \n• "-", "!", "не" вместо "¬"\n• знак следования обозначается так: "->"\n• знак эквиваленции записывайте, как обычный знак равенства ("=")'
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

                <EditText
                    android:id="@+id/resh2_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint=" Логическое выражение"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>