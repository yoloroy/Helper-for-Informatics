<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="#fff" />
                </shape>
            </item>
            <item
                android:gravity="bottom"
                android:bottom="3dp"
                android:right="5dp"
                android:left="5dp">
                <shape
                    android:shape="line">
                    <size
                        android:height="14dp" />
                    <stroke
                        android:width="0.7dp"
                        android:color="#666" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>